{
  "name": "robot-api",
  "version": "0.1.3",
  "license": "MIT",
  "repository": "tue-robotics/robot-api",
  "author": {
    "name": "Ramon Wijnands",
    "email": "rayman747@hotmail.com",
    "url": "https://github.com/Rayman"
  },
  "main": "lib/index.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "browser": {
    "eventemitter2": "./lib/shims/eventemitter2.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMapRelative": ".",
          "loose": "all",
          "blacklist": [
            "regenerator"
          ],
          "optional": [
            "validation.undeclaredVariableCheck"
          ]
        }
      ],
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "lodash": "global:_",
    "roslib": "global:ROSLIB"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "lint": "xo",
    "check": "dependency-check package.json --entry lib",
    "watch": "mkdirp dist/ && watchify lib/index.js -s API -o dist/bundle.js -vd",
    "prebuild": "npm run check -s && npm run clean -s",
    "build": "mkdirp dist/ && browserify lib/index.js -s API -o dist/bundle.js -d",
    "version": "npm run build && git add -A dist",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push && git push --tags"
  },
  "xo": {
    "ignores": [
      "dist/**",
      "lib/hardware.js",
      "lib/head.js",
      "lib/ed.js"
    ],
    "space": true,
    "esnext": true
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "browserify": "^11.0.1",
    "browserify-shim": "^3.8.10",
    "dependency-check": "^2.5.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.4.2",
    "watchify": "^3.3.1",
    "xo": "^0.9.0"
  },
  "dependencies": {
    "eventemitter2": "^0.4.14",
    "lodash": "^3.10.1",
    "roslib": "^0.17.0"
  }
}
