{
  "name": "robot-api",
  "version": "0.4.1",
  "license": "MIT",
  "repository": "tue-robotics/robot-api",
  "author": {
    "name": "Ramon Wijnands",
    "email": "rayman747@hotmail.com",
    "url": "https://github.com/Rayman"
  },
  "main": "dist/cjs/index.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "browser": {
    "eventemitter2": "./lib/shims/eventemitter2.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMapRelative": "."
        }
      ],
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "roslib": "global:ROSLIB"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "lint": "xo --fix",
    "check_deps": "dependency-check .",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build_cjs && npm run build_global",
    "postbuild": "npm run check_deps",
    "build_cjs": "babel lib/ --out-dir dist/cjs/ --source-maps",
    "watch_cjs": "babel lib/ --watch --out-dir dist/cjs/ --source-maps",
    "build_global": "mkdirp dist/ && browserify lib/index.js -s API -d | exorcist dist/bundle.js.map > dist/bundle.js",
    "watch_global": "mkdirp dist/ && watchify lib/index.js -s API -o dist/bundle.js -vd",
    "version": "npm run build && git add -A dist",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push && git push --tags"
  },
  "xo": {
    "envs": [
      "browser"
    ],
    "ignores": [
      "dist/**",
      "lib/graveyard/*"
    ],
    "space": true,
    "esnext": true,
    "rules": {
      "strict": [
        2,
        "never"
      ],
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true
        }
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "ActionClient",
            "Service",
            "Topic"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.1.4",
    "babel-plugin-transform-class-properties": "^6.1.4",
    "babel-plugin-transform-es2015-for-of": "^6.1.4",
    "babel-plugin-transform-runtime": "^6.0.14",
    "babel-plugin-transform-strict-mode": "^6.1.4",
    "babel-preset-es2015": "^6.1.4",
    "babelify": "^7.2.0",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.10",
    "cz-conventional-changelog": "^1.1.4",
    "dependency-check": "^2.5.0",
    "exorcist": "^0.4.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.4.2",
    "watchify": "^3.3.1",
    "xo": "^0.10.1"
  },
  "dependencies": {
    "babel-runtime": "^5.8.34",
    "base64-js": "0.0.8",
    "eventemitter2": "^0.4.14",
    "lodash": "^3.10.1",
    "roslib": "^0.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
