{
  "name": "robot-api",
  "version": "0.5.0",
  "license": "MIT",
  "repository": "tue-robotics/robot-api",
  "author": {
    "name": "Ramon Wijnands",
    "email": "rayman747@hotmail.com",
    "url": "https://github.com/Rayman"
  },
  "main": "dist/cjs/index.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "browser": {
    "eventemitter2": "./lib/shims/eventemitter2.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMapRelative": "."
        }
      ],
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "roslib": "global:ROSLIB"
  },
  "scripts": {
    "postinstall": "bower install",
    "clean": "rimraf dist/",
    "lint": "xo --fix",
    "deps": "npm run deps:missing && npm run deps:extra",
    "deps:missing": "dependency-check .",
    "deps:extra": "dependency-check . --extra --no-dev",
    "prebuild": "npm run lint && npm run clean",
    "build": "npm run build_cjs && npm run build_global",
    "postbuild": "npm run deps",
    "build_cjs": "babel lib/ --out-dir dist/cjs/ --source-maps",
    "watch_cjs": "babel lib/ --watch --out-dir dist/cjs/ --source-maps",
    "build_global": "mkdirp dist/ && browserify lib/index.js -s API -d | exorcist dist/bundle.js.map > dist/bundle.js",
    "postbuild_global": "sh -c 'test -s dist/bundle.js'",
    "watch_global": "mkdirp dist/ && watchify lib/index.js -s API -o dist/bundle.js -vd",
    "test": "npm run test_node && npm run test_browser",
    "test_node": "mocha test/**/*.test.js",
    "test_browser": "karma start --single-run",
    "coverage": "babel-node node_modules/isparta/bin/isparta cover node_modules/mocha/bin/_mocha -- --reporter dot test/**/*.test.js",
    "version": "npm run build && git add -A dist",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push && git push --tags"
  },
  "xo": {
    "envs": [
      "browser",
      "mocha"
    ],
    "ignores": [
      "dist/**",
      "lib/graveyard/*"
    ],
    "space": true,
    "esnext": true,
    "rules": {
      "strict": [
        2,
        "never"
      ],
      "no-unused-expressions": [
        2,
        {
          "allowShortCircuit": true
        }
      ],
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "ActionClient",
            "Service",
            "Topic"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-cli": "^6.2.4",
    "babel-core": "^6.2.4",
    "babel-plugin-transform-class-properties": "^6.2.4",
    "babel-plugin-transform-es2015-for-of": "^6.2.4",
    "babel-plugin-transform-runtime": "^6.2.4",
    "babel-plugin-transform-strict-mode": "^6.2.4",
    "babel-preset-es2015": "^6.2.4",
    "babelify": "^7.2.0",
    "bower": "^1.6.5",
    "browserify": "^12.0.1",
    "browserify-shim": "^3.8.11",
    "chai": "^3.4.1",
    "cz-conventional-changelog": "^1.1.4",
    "dependency-check": "^2.5.0",
    "exorcist": "^0.4.0",
    "isparta": "^4.0.0",
    "karma": "^0.13.15",
    "karma-babel-preprocessor": "^6.0.1",
    "karma-cli": "^0.1.1",
    "karma-firefox-launcher": "^0.1.7",
    "karma-mocha": "^0.2.1",
    "mkdirp": "^0.5.1",
    "mocha": "^2.3.4",
    "rimraf": "^2.4.2",
    "sinon": "^1.17.2",
    "sinon-chai": "^2.8.0",
    "watchify": "^3.6.1",
    "xo": "^0.12.0"
  },
  "dependencies": {
    "babel-runtime": "^6.2.4",
    "base64-js": "0.0.8",
    "eventemitter2": "^0.4.14",
    "lodash": "^3.10.1",
    "roslib": "^0.17.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
