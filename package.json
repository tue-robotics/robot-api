{
  "name": "robot-api",
  "version": "0.3.0",
  "license": "MIT",
  "repository": "tue-robotics/robot-api",
  "author": {
    "name": "Ramon Wijnands",
    "email": "rayman747@hotmail.com",
    "url": "https://github.com/Rayman"
  },
  "main": "dist/cjs/index.js",
  "files": [
    "lib/",
    "dist/"
  ],
  "browser": {
    "eventemitter2": "./lib/shims/eventemitter2.js"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMapRelative": "."
        }
      ],
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "lodash": "global:_",
    "roslib": "global:ROSLIB"
  },
  "scripts": {
    "clean": "rimraf dist/",
    "lint": "xo",
    "check": "npm run lint && dependency-check package.json --entry lib",
    "prebuild": "npm run check && npm run clean",
    "build": "npm run build_cjs && npm run build_global",
    "build_cjs": "babel lib/ --out-dir dist/cjs/ --source-maps --modules common",
    "watch_cjs": "babel lib/ --watch --out-dir dist/cjs/ --source-maps --modules common",
    "build_global": "mkdirp dist/ && browserify lib/index.js -s API -d | exorcist dist/bundle.js.map > dist/bundle.js",
    "watch_global": "mkdirp dist/ && watchify lib/index.js -s API -o dist/bundle.js -vd",
    "version": "npm run build && git add -A dist",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push && git push --tags"
  },
  "xo": {
    "ignores": [
      "dist/**",
      "lib/graveyard/*"
    ],
    "space": true,
    "esnext": true,
    "rules": {
      "new-cap": [
        2,
        {
          "capIsNewExceptions": [
            "Topic",
            "Service"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "babel-runtime": "^5.8.25",
    "babelify": "^6.3.0",
    "browserify": "^11.0.1",
    "browserify-shim": "^3.8.10",
    "dependency-check": "^2.5.0",
    "exorcist": "^0.4.0",
    "mkdirp": "^0.5.1",
    "rimraf": "^2.4.2",
    "watchify": "^3.3.1",
    "xo": "^0.9.0"
  },
  "dependencies": {
    "eventemitter2": "^0.4.14",
    "lodash": "^3.10.1",
    "roslib": "^0.17.0"
  }
}
